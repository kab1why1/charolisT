@model IEnumerable<charolis.Entity.User>

@{
    ViewData["Title"] = "Список користувачів";
}

<h2>Користувачі</h2>

@if (User.IsInRole("Admin"))
{
    <a class="btn btn-success mb-3" asp-action="Create">Створити користувача</a>
}

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Логін</th>
        <th>Email</th>
        <th>Роль</th>
        <th>Дії</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Id</td>
            <td>@u.Username</td>
            <td>@u.Email</td>
            <td>@u.Role</td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@u.Id">Редагувати</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@u.Id">Видалити</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>